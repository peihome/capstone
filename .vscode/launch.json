{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/transcoder/requestHandler/transcoder.js"
        },
        {
            "type": "node-terminal",
            "name": "transcoder",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}/transcoder"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: start",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}/frontend_test"
        },
        {
            "type": "node-terminal",
            "name": "backend",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}/backend"
        }
    ]
}